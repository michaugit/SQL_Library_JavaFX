<?import javafx.scene.text.Font?>


<GridPane alignment="center" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171" fx:controller="sample.Controller">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <AnchorPane prefHeight="190.0" prefWidth="430.0">
         <children>
            <Button fx:id="searchByName" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#searchByNameWindow" prefHeight="50.0" prefWidth="400.0" text="Wyszukaj autora po nazwisku" AnchorPane.leftAnchor="15.0" AnchorPane.topAnchor="10.0">
               <font>
                  <Font name="System Bold Italic" size="18.0" />
               </font>
            </Button>
            <Button fx:id="searchByISBN" layoutX="14.0" layoutY="76.0" mnemonicParsing="false" onAction="#searchByISBNWindow" prefHeight="50.0" prefWidth="400.0" text="Wyszukaj po numerze ISBN" AnchorPane.leftAnchor="15.0" AnchorPane.topAnchor="70.0">
               <font>
                  <Font name="System Bold Italic" size="18.0" />
               </font>
            </Button>
            <Button fx:id="addBook" layoutX="14.0" layoutY="145.0" mnemonicParsing="false" onAction="#addBookWindow" prefHeight="50.0" prefWidth="400.0" text="Dodaj nową książkę" AnchorPane.leftAnchor="15.0" AnchorPane.topAnchor="130.0">
               <font>
                  <Font name="System Bold Italic" size="18.0" />
               </font>
            </Button>
         </children>
      </AnchorPane>
   </children>
</GridPane>
